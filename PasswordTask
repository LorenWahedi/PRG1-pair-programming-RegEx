const hasMinimumLength = /.{8,}/;
const hasUppercase = /[A-Z]/;
const hasLowercase = /[a-z]/;
const hasDigit = /[0-9]/;
const hasSpecialCharacter = /[!@#$%^&*()_+{}\[\]:;<>,.?~\\/\|=]/;


let strongPassword = "Hi!Hi!Hi!09";
let mediumPassword = "HiHiHi09";
let weakPassword = "hii"
let passwordStrengthCounter = (0);


function passwordStrengthChecker(password){
hasMinimumLength.test(password) ? passwordStrengthCounter++ : "fail"
hasUppercase.test(password) ? passwordStrengthCounter++ : "fail"
hasLowercase.test(password) ? passwordStrengthCounter++ : "fail"
hasDigit.test(password) ? passwordStrengthCounter++ : "fail"
    if (passwordStrengthCounter < 4) {
        return "Weak password"
    } else {
        return hasSpecialCharacter.test(password) ? "Strong password" : "Medium password, please add a special character";
    }
}

console.log(passwordStrengthChecker(strongPassword));
